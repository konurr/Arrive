<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arrive.conor.arrive.Silencers.SilencerMathSums"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="333dp"
        android:layout_height="103dp"
        android:id="@+id/questionOneLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvQ1OperandOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="25"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/questionOneLayout"
        app:layout_constraintTop_toTopOf="@+id/questionOneLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/questionOneLayout"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/questionOneLayout"
        app:layout_constraintTop_toTopOf="@+id/questionOneLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.477"
        app:layout_constraintLeft_toRightOf="@+id/tvQ1OperandOne"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tvOperator"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/questionOneLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/questionOneLayout"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvQ1Equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/questionOneLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/questionOneLayout"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/questionOneLayout"
        app:layout_constraintLeft_toRightOf="@+id/tvQ1Equals"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/questionOneLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/questionOneLayout"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
